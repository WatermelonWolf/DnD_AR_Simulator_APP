<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/sceneform_fragment"
        class="com.google.ar.sceneform.ux.ArFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/chair"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:src="@drawable/chair" />

            <ImageView
                android:id="@+id/table"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@drawable/table" />

            <ImageView
                android:id="@+id/chest"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@drawable/chest" />

            <ImageView
                android:id="@+id/dungeonwall"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:src="@drawable/dungeonwall" />

            <ImageView
                android:id="@+id/reaper"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:src="@drawable/reaper" />

            <ImageView
                android:id="@+id/werewolf"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@drawable/werewolf" />
            <ImageView
                android:id="@+id/grave"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@drawable/grave" />
            <ImageView
                android:id="@+id/hauntedhouse"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@drawable/hauntedhouse" />
            <ImageView
                android:id="@+id/spider"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@drawable/spider" />
            <ImageView
                android:id="@+id/scarytree"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@drawable/scarytree" />
            <ImageView
                android:id="@+id/pumpkin"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@drawable/pumpkin" />
        </LinearLayout>
    </HorizontalScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/animate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_play_arrow_black_24dp" />


</androidx.constraintlayout.widget.ConstraintLayout>